        <div class="clearfix"> </div>
        <!-- banner -->
        <div class="main-page-img hidden-xs">
            <!--//End-slider-script -->
            <div  id="top" class="callbacks_container wow fadeInUp hidden-xs" data-wow-delay="0.5s">
                <ul class="rslides" id="main-slider">
                    <li>
                        <div class="main-page-img-inf">
                            <h3>{{'text.main_page.banner_title_1' | trans}}</h3>
                            <p>{{'text.main_page.banner_text_1' | trans}}</p>
                        </div>
                    </li>
                    <li>
                        <div class="main-page-img-inf">
                            <h3>{{'text.main_page.banner_title_2' | trans}}</h3>
