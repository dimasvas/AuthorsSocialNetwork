                </ul>
            </div>
        </div>
        <div class="visible-xs">
            <img src="/images/writer_place.jpg" class="img-responsive small-main-img">
        </div>
        <!-- //banner -->
        <!-- banner-bottom -->
        
        <!-- blog -->
        <div class="blog main-page">
            <div class="blog-content">
                <div class="sap_tabs">
                    <div id="horizontalTab" style="display: block; width: 100%; margin: 0px;">
                        <ul class="resp-tabs-list">
                            <li class="resp-tab-item grid1" aria-controls="tab_item-0" role="tab"><span>{{ 'common.popular' | trans }}</span></li>
                            <li class="resp-tab-item grid2" aria-controls="tab_item-1" role="tab"><span>{{ 'common.recent' | trans}}</span></li>
                            <div class="clear"></div>
                        </ul>
                        <div class="resp-tabs-container">
                            <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-0">
                                {% for entity in popular %}
                                    <div class="facts">
                                        <div class="tab_list">
                                            <a href="{{ path('composition_show', {id: entity.id})}}" class="b-link-stripe b-animate-go   swipebox"  title="">
                                                
                                                {% if entity.imageName is null %}
                                                    <img  width="150px" src="{{ default_composition_cover }}" class="img-responsive">
                                                {% else %}
                                                   <img width="150px" src="{{ vich_uploader_asset(entity, 'imageFile') }}" alt="{{ entity.title }}" class="img-responsive" />   
                                                {% endif%}
                                            </a>
                                        </div>
                                        <div class="tab_list1">
                                            <a href="{{ path('composition_show', {id: entity.id})}}">{{ entity.title }}</a>
                                            <p>{{ entity.created | date("m/d/Y")}}<span>{{ entity.description|length > 50 ? entity.description|slice(0, 50) ~ '...' : entity.description }}</span></p>
                                        </div>
                                        <div class="clearfix"> </div>
                                    </div>
                                {% endfor %}    
                            </div>
                            <div class="tab-2 resp-tab-content" aria-labelledby="tab_item-1">
                                 {% for entity in latest %}
                                    <div class="facts">
                                        <div class="tab_list">
                                            <a href="{{ path('composition_show', {id: entity.id})}}" class="b-link-stripe b-animate-go   swipebox"  title="">
                                                
                                                {% if entity.imageName is null %}
                                                    <img width="150px" src="{{ default_composition_cover }}" class="img-responsive">
                                                {% else %}
                                                   <img width="150px" src="{{ vich_uploader_asset(entity, 'imageFile') }}" alt="{{ entity.title }}" class="img-responsive" />   
                                                {% endif%}  
                                            </a>
                                        </div>
                                        <div class="tab_list1">
                                            <a href="{{ path('composition_show', {id: entity.id})}}">{{ entity.title }}</a>
                                            <p>{{ entity.created | date("m/d/Y")}}<span>{{ entity.description|length > 50 ? entity.description|slice(0, 50) ~ '...' : entity.description }}</span></p>
                                        </div>
                                        <div class="clearfix"> </div>
                                    </div>
                                {% endfor %} 
                            </div>        
                        </div>
                    </div>
                            
                    <div class="newsletter ">
                        <h3>{{'common.subscribe_to_news' | trans }}</h3>
                        <form id="subscribe-form">
                            <input type="text" id="email_input" name="email_input" value="Email" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Email';}" required="">
                            <input type="submit" value="{{'common.send' | trans }}">
                            <div><label for="email_input" class="validate error" generated="true" style="display:none"></label></div>
                        </form>
                    </div>
