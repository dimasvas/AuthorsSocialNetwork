{% extends 'one_column.html.twig' %}

{% block seo %}
    {{ include('::include/seo.html.twig', {'page': 'authors'}) }}
{% endblock %}

{% block content %}
    <div class="content">
        <h1 class="text-center">{{ 'common.author' | trans }}</h1>
        
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>{{ 'common.author' | trans }}</th>
                    <th>{{ 'common.compositions' | trans }}</th>
                </tr>
            </thead>
            
            <tbody>
                {% for entity in collection %}
                    <tr>
                      <td><a class="author-list" href="{{ path('author_show', { 'id': entity.id }) }}">{{ entity.nameSurname }}</a></td>
                      <td>{{ entity.author.totalCompositions }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        
        {{ include('pagination/pager.html.twig', { 'pager': pager }) }}
    </div>

{% endblock %}
