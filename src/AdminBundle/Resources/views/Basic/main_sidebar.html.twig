{% if app.user.imageName is empty  %}
    {% set user_profile_image =  default_user_profile  %}
{% else %}
    {% set user_profile_image =  vich_uploader_asset(app.user, 'imageFile') %}
{% endif %}
        
<!-- sidebar: style can be found in sidebar.less -->
<section class="sidebar">
  <!-- Sidebar user panel -->
  <div class="user-panel">
    <div class="pull-left image">
       <img src="{{ user_profile_image }}" class="img-circle" alt="User Image">
    </div>
    <div class="pull-left info">
      <p>{{ app.user.username }}</p>
    </div>
  </div> 
  
  <!-- sidebar menu: : style can be found in sidebar.less -->
  <ul class="sidebar-menu">
    <li class="header">{{ 'admin.menu.titles.main_menu' | trans }}</li>

    <li>
        <a href="{{ path('admin-dashboard') }}">
            <i class="fa fa-dashboard"></i> 
            <span>{{ 'admin.menu.items.dashboard' | trans }}</span>
        </a>
    </li>
    <li class="treeview">
      <a href="#">
        <i class="fa fa-user"></i>
        <span>{{ 'admin.menu.items.users' | trans }}</span>
        <i class="fa fa-angle-left pull-right"></i>
      </a>
      <ul class="treeview-menu">
        <li><a href="{{ path('admin-users-get', {type: 'active'})}}"><i class="fa fa-circle-o"></i> {{ 'admin.menu.items.active' | trans }}</a></li>
        <li><a href="{{ path('admin-users-get', {type: 'blocked'})}}"><i class="fa fa-circle-o"></i> {{ 'admin.menu.items.blocked' | trans }}</a></li>
        <li><a href="{{ path('admin-users-get', {type: 'nonactive'})}}"><i class="fa fa-circle-o"></i> {{ 'admin.menu.items.nonactive' | trans }}</a></li>
        <li><a href="{{ path('admin-users-search-page')}}"><i class="fa fa-circle-o"></i> {{ 'admin.menu.items.search' | trans }}</a></li>
      </ul>
    </li>
    
    <li class="treeview">
      <a href="#">
        <i class="fa fa-sticky-note-o"></i>
        <span>{{ 'admin.menu.items.compositions' | trans }}</span>
        <i class="fa fa-angle-left pull-right"></i>
      </a>
      <ul class="treeview-menu">
        <li><a href="{{ path('admin-composition-list-get', {type: 'published'})}}"><i class="fa fa-circle-o"></i> {{ 'admin.menu.items.published' | trans }}</a></li>
        <li><a href="{{ path('admin-composition-list-get', {type: 'blocked'})}}"><i class="fa fa-circle-o"></i> {{ 'admin.menu.items.blocked' | trans }}</a></li>
        <li><a href="{{ path('admin-composition-search-page')}}"><i class="fa fa-circle-o"></i> {{ 'admin.menu.items.search' | trans }}</a></li>
      </ul>
    </li>
    
    <li>
        <a href="{{ path('admin-rviolation-list') }}">
            <i class="fa fa-bug"></i> 
            <span>{{ 'admin.menu.items.rule_violation' | trans }}</span>
        </a>
    </li>
    <li>
        <a href="{{ path('admin-feedback-list') }}">
            <i class="fa fa-mail-forward"></i> 
            <span>{{ 'admin.menu.items.feedback' | trans }}</span>
        </a>
    </li>
 
  </ul>
</section>
